= form_for @user, :url => { :action => 'search' } do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, 'error')} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :username
    = f.text_field :username
  .actions
    = f.submit 'Search'

%div
  - if @friends.present?
    - @friends.each do |friend|
      %span
        = friend.username.blank? ? 'No Username' : friend.username
      %span
        = friend.email
      %span
        - if current_user.is_friend?(friend)
          - if current_user.is_active_friend?(friend)
            = link_to 'Remove from friends', { :controller => 'friendships', :action => 'destroy_friendship', :friend_id => friend.id}
          - else
            Inactive Friend
        - else
          = link_to 'Add to friends', { :controller => 'friendships', :action => 'new_friendship', :friend_id => friend.id}
