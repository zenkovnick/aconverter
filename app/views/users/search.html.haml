= form_for @user, :url => { :action => 'search' } do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, 'error')} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :username
    = f.text_field :username
  .actions
    = f.submit 'Search'

%div
  - if @friend.present?
    %span
      = @friend.username.blank? ? 'No Username' : @friend.username
    %span
      = @friend.email

